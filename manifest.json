{
  "manifest_version": 2,
  "name": "Peridoic Cookie Cleaner",
  "version": "1.0",
  "description": "Deletes all cookies based on a Days interval",
  "permissions": ["cookies", "storage", "alarms", "tabs", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}

